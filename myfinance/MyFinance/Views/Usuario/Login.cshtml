@model UsuarioModel

@{
    //ctrl+a ctrl+k ctrl+d

    try
    {
        if (TempData["MensagemLoginInvalido"].ToString() != "")
        {
            <div class="alert alert-danger">
                <strong>Atenção.</strong> @TempData["MensagemLoginInvalido"]
            </div>
        }
    }
    catch { }

}

<form asp-controller="Usuario" asp-action="ValidarLogin">
    <div class="form-group">
        <label for="email">Email:</label>
        <input type="email" class="form-control" asp-for="Email">
    </div>
    <div class="form-group">
        <label for="Senha">Senha:</label>
        <input type="password" class="form-control" asp-for="Senha">
    </div>
    <div class="checkbox">
        <label><input type="checkbox"> Lembrar meu acesso</label>
    </div>
    <button type="submit" class="btn btn-default">Entrar</button>
</form>